# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.TwitterController.index
POST    /listTweets                 controllers.TwitterController.listTweets
POST    /listWordCount              controllers.TwitterController.listWordCount
POST    /create                     controllers.TwitterController.create
GET    /timeline                    controllers.TwitterController.timeline
GET     /tweets/:keywords           controllers.TwitterController.tweets(keywords:String)


# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
